@using Microsoft.AspNet.Identity
@using Guffaw.Utilities;
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Guffaw Administrator</title>
    <script src="https://use.fontawesome.com/10a964325b.js"></script>
    <link href="~/Content/admin.css" rel="stylesheet" />
    <link href="~/Content/images/others/cbd_logo_icon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!------ Include the above in your HEAD tag ---------->
    <nav class="navbar navbar-inverse navbar-static-top" style="position:sticky">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <div>
                    <a class="navbar-brand text-center text-uppercase" style="color:white;font-size:20px">
                        Welcome Guffaw Administrator :  @User.Identity.Name
                    </a>

                </div>
                @*<hr style="border:solid white" />*@


                <div style="float:left;margin:0 auto;font-size:13px">

                    <ul class="nav nav-pills navbar-left">
                        <li class="@Html.IsSelected(controllers: "Admin")">
                            <a href="@Url.Action("Index", "Admin")">
                               <span class="glyphicon glyphicon-home"></span>&nbsp;
                                Home
                            </a>
                        </li>
                        <li class="@Html.IsSelected(controllers: "Contacts")">
                            <a href="@Url.Action("Index", "Contacts")">      
                                <span class="glyphicon glyphicon-book"></span>&nbsp;
                                Contacts
                            </a>
                        </li>
                        <li class="@Html.IsSelected(controllers: "BlogPosts")">
                            <a href="@Url.Action("Index", "BlogPosts")">
                                <span class="glyphicon glyphicon-comment"></span>&nbsp;Blog
                            </a>
                        </li>
                        @*<li><a href="@Url.Action("Index", "Volunteers")"><span class="glyphicon glyphicon-user"></span> Volunteers</a></li>*@


                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <li style="margin-top:10px; margin-right:-10px;padding-left:100px;">
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <span class="glyphicon glyphicon-log-out"></span> Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                @*<div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <li class="navbar-link" style="margin-top:10px; margin-right:-10px">
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <span class="glyphicon glyphicon-log-out"></span> Logout
                        </a>
                    </li>
                }
            </ul>
        </div>*@

            </div>


        </div>
    </nav>

    <div class="container-fluid main-container">
        <div class="container">
            @RenderBody()
        </div>
        <footer class="footer text-center fixed-bottom">
            <p>
                &copy; @DateTime.Now.Year - Guffawcbd All Rights Reserved.
            </p>
        </footer>
    </div>



    <script>
        $(function () {
            $('.navbar-toggle-sidebar').click(function () {
                $('.navbar-nav').toggleClass('slide-in');
                $('.side-body').toggleClass('body-slide-in');
                $('#search').removeClass('in').addClass('collapse').slideUp(200);
            });

            $('#search-trigger').click(function () {
                $('.navbar-nav').removeClass('slide-in');
                $('.side-body').removeClass('body-slide-in');
                $('.search-input').focus();
            });
        });
    </script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)

</body>