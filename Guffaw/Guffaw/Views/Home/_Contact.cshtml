    @* Contact Form *@
    <div class="container">
        <h4 class="text-center">Any Questions?</h4>
        <br />

        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-10 pb-5">

                @using (Html.BeginForm("SendMessage", "Home", FormMethod.Post, new { @id = "contactform" }))
                {
                    @Html.AntiForgeryToken()
                    <!--Form with header-->
                    @*<form action="mail.php" method="post">*@
                    <div class="card border-primary rounded-0">
                        <div class="card-header p-0">
                            <div class="bg-info text-white text-center py-2">
                                <h3><i class="fa fa-envelope"></i>&nbsp; Send us a message</h3>
                                @*<p class="m-0">Feel free to send us a message</p>*@
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <!--Body-->
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-user text-info"></i></div>
                                    </div>
                                    @*<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Full Name" required>*@
                                    @Html.EditorFor(model => model.ContactVM.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Full Name", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.ContactVM.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-envelope text-info"></i></div>
                                    </div>
                                    @Html.EditorFor(model => model.ContactVM.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email", required = "required" } })
                                    @Html.ValidationMessageFor(model => model.ContactVM.Email, "", new { @class = "text-danger" })
                                    @*<input type="email" class="form-control" name="email" placeholder="Email" required>*@
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-phone text-info"></i></div>
                                    </div>
                                    @Html.EditorFor(model => model.ContactVM.Phonenumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                                    @Html.ValidationMessageFor(model => model.ContactVM.Phonenumber, "", new { @class = "text-danger" })
                                    @*<input type="tel" class="form-control" name="Phonenumber" placeholder="Phonenumber" required>*@
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class="fa fa-comment text-info">Message</i></div>
                                    </div>
                                    <hr />
                                    @*<textarea class="form-control" placeholder="Your Message" required></textarea>*@
                                    @Html.TextAreaFor(model => model.ContactVM.Message, new { htmlAttributes = new { @class = "form-control", placeholder = "Message", required = "required" }, cols = "155", rows = "7" })
                                    @Html.ValidationMessageFor(model => model.ContactVM.Message, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" value="Send" class="btn btn-info btn-block rounded-0 py-2">
                            </div>
                        </div>
                    </div>
                    @*</form>*@
                    <!--Form with header-->
                }

            </div>
        </div>
    </div>
</section>
